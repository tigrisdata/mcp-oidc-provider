# Server configuration
OIDC_PORT=4001
MCP_PORT=3001
OIDC_BASE_URL=http://localhost:4001
MCP_BASE_URL=http://localhost:3001
SESSION_SECRET=your-session-secret-here

# Option A: Generic OIDC provider (works with any OIDC-compliant provider)
OIDC_ISSUER=https://your-provider.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_SCOPES=openid email profile

# Option B: Auth0 configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://your-api-audience

# Option C: Clerk configuration
CLERK_DOMAIN=your-app.clerk.accounts.dev
CLERK_CLIENT_ID=your-client-id
CLERK_CLIENT_SECRET=your-client-secret

# JWKS for token signing
# For production: generate using `npx mcp-oidc-provider --pretty`
# JWKS={"keys":[...]}

TIGRIS_STORAGE_ACCESS_KEY_ID=tid_xxxxx
TIGRIS_STORAGE_SECRET_ACCESS_KEY=tsec_yyyyy
TIGRIS_STORAGE_BUCKET=my-kv-bucket